%h4.text-center
  = t 'discussions.title'

%dl.dl-horizontal
  %dt= t 'discussions.district'
  %dd= params[:district]
  - if params[:zone].present?
    %dt= t 'discussions.zone'
    %dd= params[:zone]

- if @discussions.present?

  .panel-group#discussion-list{ role: 'tablist' }
    - @discussions.each do |discussion|
      .panel.panel-default
        .panel-heading{ role: 'tab' }
          %a.collapsed{ href: "#discussion-#{discussion.id}",
          data: { toggle: 'collapse', parent: '#discussion-list' }}
            = discussion.title
        .panel-collapse.collapse{ role: 'tabpanel',
        id: "discussion-#{discussion.id}" }
          .panel-body{ id: "discussion-#{discussion.id}-body" }
            -#TEMP discussion body

%small
  %i
    FID:
    = params[:fid]

#left-section
  %ul
    - tab_data = { toggle: 'tab', placement: 'right' }
    %li.active
      %a{ href: '#info-tab',
          data: tab_data,
          title: t('nav.tabs.info') }
        = icon('map-marker')
    %li
      %a{ href: '#messages-tab',
          data: tab_data,
          title: t('nav.tabs.messages') }
        = icon('weixin')
    %li
      %a{ href: '#amendments-tab',
          data: tab_data,
          title: t('nav.tabs.amendments') }
        = icon('files-o')
    %li
      %a{ href: '#profile-tab',
          data: tab_data,
          title: t('nav.tabs.profile') }
        = icon('user')

  .tab-content
    #info-tab.tab-pane.active
      = render 'home/instructions'
    #messages-tab.tab-pane
      = t 'nav.tabs.messages'
    #amendments-tab.tab-pane
      = t 'nav.tabs.amendments'
    #profile-tab.tab-pane
      = t 'nav.tabs.profile'
